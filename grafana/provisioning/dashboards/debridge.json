{
  "title": "DeBridge Data Pipeline",
  "tags": ["debridge", "blockchain", "temporal"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "uid": "debridge-pipeline",
    "panels": [
      {
        "id": 1,
        "title": "Events Collected",
        "type": "stat",
        "targets": [
          {
            "expr": "debridge_events_collected_total",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "RPC Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(debridge_rpc_request_duration_seconds_count[1m])",
            "refId": "A",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"x": 6, "y": 0, "w": 9, "h": 4},
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Pipeline Progress",
        "type": "gauge",
        "targets": [
          {
            "expr": "debridge_pipeline_progress * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 15, "y": 0, "w": 6, "h": 4},
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "RPC Request Latency (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(debridge_rpc_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50 - {{method}}"
          },
          {
            "expr": "histogram_quantile(0.95, rate(debridge_rpc_request_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95 - {{method}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(debridge_rpc_request_duration_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99 - {{method}}"
          }
        ],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6},
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "debridge_process_resident_memory_bytes / 1024 / 1024",
            "refId": "A",
            "legendFormat": "RSS"
          },
          {
            "expr": "debridge_nodejs_heap_size_used_bytes / 1024 / 1024",
            "refId": "B",
            "legendFormat": "Heap Used"
          }
        ],
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 6},
        "yaxes": [
          {"format": "decmbytes", "label": "Memory (MB)"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Event Loop Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "debridge_nodejs_eventloop_lag_seconds * 1000",
            "refId": "A",
            "legendFormat": "Current"
          },
          {
            "expr": "debridge_nodejs_eventloop_lag_p99_seconds * 1000",
            "refId": "B",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6},
        "yaxes": [
          {"format": "ms", "label": "Lag"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Rate Limits & Retries",
        "type": "stat",
        "targets": [
          {
            "expr": "debridge_rate_limit_hits_total",
            "refId": "A"
          },
          {
            "expr": "debridge_retries_total",
            "refId": "B"
          }
        ],
        "gridPos": {"x": 12, "y": 10, "w": 6, "h": 6},
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Current Block",
        "type": "stat",
        "targets": [
          {
            "expr": "debridge_current_block_number",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 18, "y": 10, "w": 6, "h": 6},
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      }
    ]
}
